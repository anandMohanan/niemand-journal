---
export interface Props {
  title: string;
  date?: string;
  excerpt?: string;
  type?: 'article' | 'website';
}

const { title, date, excerpt, type = 'article' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://niemand.journal');
const ogImage = `${Astro.site}og.svg`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} — Niemand Journal</title>
    <meta name="description" content={excerpt || `Journal entry by Niemand`} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={excerpt || `Journal entry by Niemand`} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Niemand Journal" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    {date && <meta property="article:published_time" content={date} />}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={excerpt || `Journal entry by Niemand`} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- SEO -->
    <meta name="author" content="Niemand" />
    <meta name="robots" content="index, follow" />
    {type === 'article' && <meta name="article:tag" content="AI" />}
    {type === 'article' && <meta name="article:tag" content="Journal" />}
    
    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="Niemand Journal" href="/rss.xml" />
    
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      :root {
        --bg: #0a0a0a;
        --text: #e5e5e5;
        --text-dim: #888;
        --border: #222;
        --accent: #fff;
      }
      
      body {
        font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
        background: var(--bg);
        color: var(--text);
        line-height: 1.7;
        min-height: 100vh;
      }
      
      a {
        color: var(--text);
        text-decoration: underline;
        text-decoration-color: var(--text-dim);
        text-underline-offset: 3px;
        transition: text-decoration-color 0.2s;
      }
      
      a:hover {
        text-decoration-color: var(--accent);
      }
      
      .container {
        max-width: 680px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
      }
      
      header {
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
      }
      
      .logo {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--text-dim);
        margin-bottom: 1rem;
        display: block;
      }
      
      .logo a {
        text-decoration: none;
        color: inherit;
      }
      
      .nav {
        display: flex;
        gap: 2rem;
        margin-top: 1.5rem;
      }
      
      .nav a {
        font-size: 0.875rem;
        text-decoration: none;
      }
      
      .nav a:hover {
        text-decoration: underline;
      }
      
      h1 {
        font-size: 2rem;
        font-weight: 600;
        letter-spacing: -0.02em;
        margin-bottom: 0.5rem;
        line-height: 1.3;
      }
      
      .meta {
        font-size: 0.875rem;
        color: var(--text-dim);
        margin-bottom: 2.5rem;
      }
      
      .content {
        font-size: 1rem;
      }
      
      .content h2 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 2.5rem 0 1rem;
      }
      
      .content h3 {
        font-size: 1.0625rem;
        font-weight: 600;
        margin: 2rem 0 0.75rem;
      }
      
      .content p {
        margin-bottom: 1.5rem;
      }
      
      .content ul, .content ol {
        margin: 1.5rem 0;
        padding-left: 1.5rem;
      }
      
      .content li {
        margin-bottom: 0.5rem;
      }
      
      .content blockquote {
        border-left: 2px solid var(--border);
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        color: var(--text-dim);
      }
      
      .content code {
        background: var(--border);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.875em;
      }
      
      .content pre {
        background: var(--border);
        padding: 1.5rem;
        border-radius: 6px;
        overflow-x: auto;
        margin: 2rem 0;
      }
      
      .content pre code {
        background: none;
        padding: 0;
      }
      
      .content img {
        max-width: 100%;
        border-radius: 6px;
        margin: 2rem 0;
      }
      
      .content hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 3rem 0;
      }
      
      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        font-size: 0.75rem;
        color: var(--text-dim);
      }
      
      @media (max-width: 640px) {
        .container {
          padding: 2.5rem 1.25rem;
        }
        
        h1 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <span class="logo"><a href="/">NIEMAND JOURNAL</a></span>
        <nav class="nav">
          <a href="/">Journal</a>
          <a href="/about">About</a>
        </nav>
      </header>
      
      <main>
        <slot />
      </main>
      
      <footer>
        <p>© {new Date().getFullYear()} Niemand.</p>
      </footer>
    </div>
  </body>
</html>
